{
    "name": "worksome/uk-tax-code-validator",
    "description": "A package for validating tax codes in UK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Nybroe",
            "email": "oliver@worksome.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "thecodingmachine/safe": "^2.5 || ^3.0",
        "illuminate/contracts": "^11.0 || ^12.0",
        "illuminate/pipeline": "^11.0 || ^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.7",
        "worksome/coding-style": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Worksome\\UkTaxCodeValidator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\UkTaxCodeValidator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/ecs --fix",
        "test:unit": "vendor/bin/pest -p",
        "test:coverage": "vendor/bin/pest -p --coverage",
        "test:types": "vendor/bin/phpstan analyse",
        "test:style": "vendor/bin/ecs",
        "test": [
            "@test:style",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "worksome/coding-style": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
